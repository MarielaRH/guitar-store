{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"jsx": "react-jsx",

		"module": "ESNext",
		"moduleResolution": "Bundler",

		"strict": true,
		"skipLibCheck": true,

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,

		"noEmit": true
	},
	"include": ["src"]
}
